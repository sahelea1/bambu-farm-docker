# Basic Configuration
quarkus.http.host=0.0.0.0
quarkus.http.port=8080
quarkus.http.limits.max-body-size=30M

# Enable Bouncy Castle for X1C support
bambu.use-bouncy-castle=true

# Printer Configuration
# Replace with your printer info (you can add multiple printers)
bambu.printers.printer1.enabled=true
bambu.printers.printer1.name=My Printer
bambu.printers.printer1.device-id=REPLACE_WITH_DEVICE_SERIAL
bambu.printers.printer1.access-code=REPLACE_WITH_DEVICE_ACCESSCODE
bambu.printers.printer1.ip=REPLACE_WITH_DEVICE_IP
bambu.printers.printer1.model=p1p

# User Configuration
bambu.users.admin.password=admin
bambu.users.admin.role=admin

# Optional: Guest account with read-only role
# bambu.users.guest.password=guest
# bambu.users.guest.role=normal

# Optional: Dark Mode
# bambu.dark-mode=true

# Remote View Configuration
bambu.remote-view=true
bambu.dashboard.remote-view=true

# For LiveView (X1C cameras)
# bambu.live-view-url=http://bambu-liveview:8090/

# Optional: Logging Configuration
quarkus.log.file.enable=true
quarkus.log.file.path=/app/data/application.log
